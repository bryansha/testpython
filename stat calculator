# Created empty list for start
myList = []

# input number here
userInput = int(input("Put your numbers with space between each number: "))

# split up the number, then change them from str to int and sort them
revisedInput = userInput.split()
revisedInput.sort()

# put the number into the list
myList.append(revisedInput)
print(myList)

# now for basic stat function


def doing():
    mtf = input("What would you like to do now? ")
    if mtf == "add":
        addMore = int(input('add more then: '))
        revisedAdded = addMore.split()
        myList.append(revisedAdded)
        myList.sort()
        print(myList)

    elif mtf == "delete":
        deleteFun = int(input("what would you like to delete? "))
        myList.pop(deleteFun)
    elif mtf == "search":
        search = input("search for that keyword: ")
        searchResult = myList.index(search)


doing()
